<p id="notice"><%= notice %></p>
<h1>Book Title:</h1>

<h2>
  <%= @book.title %>
</h2>


<table>
  <thead>
    <tr>
      <th>Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book.chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.title %></td>
        <td><%= link_to 'Show', chapter %></td>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

