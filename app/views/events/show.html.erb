<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Chapter:</strong>
  <%= @event.chapter_id %><br />
  <%= @event.chapter.title %>
</p>

<h2>Characters</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Participation Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event.characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


